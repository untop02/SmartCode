{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ES2022",
    "outDir": "out",
    "lib": ["ES2022", "dom", "ESNext", "ES6", "DOM.Iterable"],
    "sourceMap": true,
    "rootDir": "src",
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedParameters": true
  },
  "exclude": ["node_modules", ".vscode-test"]
}
